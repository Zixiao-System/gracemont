{
  "name": "greyy-lightningbearer-debugger",
  "productName": "Greyy the Lightningbearer - Debugger",
  "version": "0.1.0",
  "description": "Hardware debugger and diagnostic tools for Gracemont Industrial Control Framework",
  "author": "Zixiao System <https://github.com/Zixiao-System>",
  "license": "GPL-3.0-or-later",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5174 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0",
    "mdui": "^2.0.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "serialport": "^12.0.0",
    "usb": "^2.11.0",
    "modbus-serial": "^8.0.0",
    "@vueuse/core": "^10.7.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "vite": "^5.0.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "@mdui/icons": "^1.0.0"
  },
  "build": {
    "appId": "com.zixiao.gracemont.debugger",
    "productName": "Greyy the Lightningbearer - Debugger",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Development"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zixiao-System/gracemont.git"
  },
  "keywords": [
    "industrial-control",
    "debugger",
    "hardware-debugging",
    "rtos",
    "arm64",
    "gdb",
    "jtag",
    "swd"
  ]
}
