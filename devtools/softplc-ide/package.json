{
  "name": "softplc-ide",
  "version": "1.0.0",
  "description": "IEC 61131-3 Compliant SoftPLC Development IDE",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "mdui": "^2.2.0",
    "@mdui/icons": "^2.2.0",
    "monaco-editor": "^0.45.0",
    "@vueuse/core": "^10.7.0",
    "lodash-es": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.27",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "@types/node": "^20.10.6",
    "@types/lodash-es": "^4.17.12",
    "@types/uuid": "^9.0.7"
  },
  "build": {
    "appId": "com.gracemont.softplc-ide",
    "productName": "SoftPLC IDE",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "web-types": ["./node_modules/mdui/web-types.zh-cn.json"]
}
