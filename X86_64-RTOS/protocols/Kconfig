#
# Industrial Protocol Configuration
#

menu "Industrial Protocols"

menu "Modbus Protocol"

config MODBUS_ENABLED
	bool "Enable Modbus Protocol"
	default y
	depends on NET_ENABLED
	help
	  Enable Modbus TCP/RTU protocol support.

config MODBUS_TCP
	bool "Enable Modbus TCP"
	default y
	depends on MODBUS_ENABLED && TCP_ENABLED
	help
	  Enable Modbus TCP protocol.

config MODBUS_TCP_PORT
	int "Modbus TCP Port"
	default 502
	depends on MODBUS_TCP
	help
	  TCP port for Modbus TCP server.

config MODBUS_RTU
	bool "Enable Modbus RTU"
	default y
	depends on MODBUS_ENABLED && UART_ENABLED
	help
	  Enable Modbus RTU (serial) protocol.

config MODBUS_RTU_BAUD
	int "Modbus RTU Baud Rate"
	default 115200
	depends on MODBUS_RTU
	help
	  Baud rate for Modbus RTU serial communication.

config MODBUS_MAX_REGS
	int "Maximum Holding Registers"
	range 1 65536
	default 256
	depends on MODBUS_ENABLED
	help
	  Maximum number of holding registers.

config MODBUS_MAX_COILS
	int "Maximum Coils"
	range 1 65536
	default 2048
	depends on MODBUS_ENABLED
	help
	  Maximum number of coils.

config MODBUS_SLAVE_ADDR
	int "Default Slave Address"
	range 1 247
	default 1
	depends on MODBUS_ENABLED
	help
	  Default Modbus slave address.

endmenu

menu "OPC UA Protocol"

config OPCUA_ENABLED
	bool "Enable OPC UA Protocol"
	default y
	depends on NET_ENABLED && TCP_ENABLED
	help
	  Enable OPC UA protocol support.

config OPCUA_PORT
	int "OPC UA Port"
	default 4840
	depends on OPCUA_ENABLED
	help
	  TCP port for OPC UA server.

config OPCUA_MAX_SESSIONS
	int "Maximum Sessions"
	range 1 64
	default 8
	depends on OPCUA_ENABLED
	help
	  Maximum number of concurrent OPC UA sessions.

config OPCUA_MAX_SUBSCRIPTIONS
	int "Maximum Subscriptions"
	range 1 256
	default 16
	depends on OPCUA_ENABLED
	help
	  Maximum number of OPC UA subscriptions.

config OPCUA_MAX_NODES
	int "Maximum Nodes"
	range 16 65536
	default 1024
	depends on OPCUA_ENABLED
	help
	  Maximum number of address space nodes.

menu "OPC UA Security"

config OPCUA_SECURITY_NONE
	bool "Security Policy: None"
	default y
	depends on OPCUA_ENABLED
	help
	  Enable no-security policy (for testing/trusted networks).

config OPCUA_SECURITY_SIGN
	bool "Security Policy: Sign"
	default n
	depends on OPCUA_ENABLED
	help
	  Enable Basic256Sha256 Sign security policy.

config OPCUA_SECURITY_ENCRYPT
	bool "Security Policy: SignAndEncrypt"
	default n
	depends on OPCUA_ENABLED
	help
	  Enable Basic256Sha256 SignAndEncrypt security policy.

endmenu

endmenu

menu "PROFINET Protocol"

config PROFINET_ENABLED
	bool "Enable PROFINET Protocol"
	default y
	depends on NET_ENABLED
	help
	  Enable PROFINET Industrial Ethernet protocol.

config PROFINET_CYCLE_TIME
	int "Cycle Time (microseconds)"
	range 250 32000
	default 1000
	depends on PROFINET_ENABLED
	help
	  PROFINET cycle time in microseconds.
	  Default is 1000us (1ms).

config PROFINET_MAX_DEVICES
	int "Maximum Devices"
	range 1 128
	default 32
	depends on PROFINET_ENABLED
	help
	  Maximum number of PROFINET devices.

config PROFINET_MAX_SLOTS
	int "Maximum Slots per Device"
	range 1 64
	default 16
	depends on PROFINET_ENABLED
	help
	  Maximum number of slots per PROFINET device.

config PROFINET_MAX_SUBSLOTS
	int "Maximum Subslots per Slot"
	range 1 32
	default 8
	depends on PROFINET_ENABLED
	help
	  Maximum subslots per slot.

config PROFINET_RT_CLASS
	int "Real-Time Class"
	range 1 3
	default 1
	depends on PROFINET_ENABLED
	help
	  PROFINET Real-Time class:
	    1 = RT Class 1 (software-based, 1-10ms)
	    2 = RT Class 2 (hardware-assisted)
	    3 = RT Class 3 (IRT, Isochronous Real-Time)

endmenu

endmenu
